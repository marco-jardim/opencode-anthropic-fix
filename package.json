{
  "name": "opencode-anthropic-fix",
  "version": "0.0.15",
  "main": "./index.mjs",
  "scripts": {
    "build": "node scripts/build.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "install:link": "node scripts/install.mjs link",
    "install:copy": "npm run build && node scripts/install.mjs copy",
    "uninstall": "node scripts/install.mjs uninstall",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.mjs": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@opencode-ai/plugin": "^0.4.45",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@openauthjs/openauth": "^0.4.3"
  }
}
